---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import translations from '../data/translations.json';

const lang = 'de';
const t = translations[lang];
---

<BaseLayout lang={lang} title={`${t.nav.contact} - ${t.meta.title}`}>
  <Header />
  
  <main class="container mx-auto px-4 py-12">
    <div class="max-w-xl mx-auto bg-white dark:bg-gray-900 p-8 rounded-lg shadow-md">
      <h1 class="text-4xl font-bold text-center mb-8">{t.contact.title}</h1>
      <p class="text-lg text-gray-600 dark:text-gray-400 mb-8 text-center">
        {t.contact.description}
      </p>
      
      <div class="space-y-6">
        <div class="flex items-center">
          <svg class="h-6 w-6 text-blue-600 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
          <a href="tel:+41762371307" class="text-lg hover:text-blue-600">+41 76 237 13 07</a>
        </div>
        <div class="flex items-center">
          <svg class="h-6 w-6 text-blue-600 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
          <a href="mailto:info@drivelab.ch" class="text-lg hover:text-blue-600">info@drivelab.ch</a>
        </div>
        <div class="flex items-start">
          <svg class="h-6 w-6 text-blue-600 mr-4 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
          <div class="text-lg">
            DriveLab GmbH<br />
            Lauriedhofweg 12<br />
            CH-6300 Zug
          </div>
        </div>
      </div>
    </div>
  </main>
  
  <Footer />
</BaseLayout>
